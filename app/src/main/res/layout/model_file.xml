<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/card_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/file_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="File Name"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"/>

    <RelativeLayout
        android:id="@+id/add_note_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_bg_bottom_curved">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/add_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Add Note"
            android:textSize="@dimen/_11sdp"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/_5sdp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/add_note_icon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_note_icon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@android:drawable/ic_media_play"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"/>

    </RelativeLayout>

</LinearLayout>