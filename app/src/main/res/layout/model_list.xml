<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp">

        <View
            android:id="@+id/drag_handle"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="@dimen/_11sdp"
            android:background="@drawable/ic_six_dots"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <CheckBox
            android:id="@+id/model_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/drag_handle"
            android:layout_marginStart="@dimen/_3sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/model_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_toEndOf="@id/model_check_box"
            android:layout_toStartOf="@id/hamburger_button"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/hamburger_button"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_hamburger"/>

    </RelativeLayout>

</FrameLayout>